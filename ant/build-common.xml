<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE project>
<project name="common">

	<property file="ant/build.properties" />

	<property file="${build.resourcesDirectory}/version.properties" />

	<property name="main.class.gui" value="it.albertus.cycles.CyclesModGui" />
	<property name="main.class.con" value="it.albertus.cycles.CyclesModCon" />

	<target name="clean">
		<delete dir="${build.directory}" />
	</target>

	<target name="compile" depends="clean">
		<mkdir dir="${build.outputDirectory}" />
		<javac srcdir="${build.sourceDirectory}" destdir="${build.outputDirectory}" source="1.6" target="1.6">
			<classpath>
				<fileset dir="${dependencies.directory}">
					<include name="**/*.jar" />
				</fileset>
			</classpath>
		</javac>
	</target>

	<target name="resources">
		<copy todir="${build.outputDirectory}">
			<fileset dir="${build.resourcesDirectory}" />
		</copy>
	</target>

	<target name="lib">
		<copy todir="${build.distDirectory}/lib">
			<fileset dir="lib">
				<include name="*.jar" />
				<include name="license/*.txt" />
			</fileset>
		</copy>
	</target>

	<target name="docs">
		<copy todir="${build.distDirectory}">
			<fileset dir="">
				<include name="README*" />
				<include name="LICENSE*" />
				<include name="NOTICE*" />
			</fileset>
		</copy>
	</target>

	<target name="scripts" description="Must be overridden" />

	<target name="jar" depends="compile, resources, scripts, docs, lib">
		<jar destfile="${build.distDirectory}/cyclesmod.jar" basedir="${build.outputDirectory}" level="9" />
	</target>

	<target name="zip" depends="jar">
		<zip destfile="${build.releaseDirectory}/cyclesmod-${version.number}-${os}-bin.zip" basedir="${build.distDirectory}" level="9" />
	</target>

</project>
