			<fileset refid="lib" />
			<fileset dir="${dependencies.directory}/platform/gtk-linux-x86">
				<include name="*.jar" />
			</fileset>
		</copy>
		<copy todir="${build.assemblyDirectory}/dist/gtk-linux-x86_64/${artifactId}/lib">
			<fileset refid="lib" />
			<fileset dir="${dependencies.directory}/platform/gtk-linux-x86_64">
				<include name="*.jar" />
			</fileset>
		</copy>
		<copy todir="${build.assemblyDirectory}/dist/cocoa-macosx/${artifactId}/lib">
			<fileset refid="lib" />
			<fileset dir="${dependencies.directory}/platform/cocoa-macosx">
				<include name="*.jar" />
			</fileset>
