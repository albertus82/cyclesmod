			<plugin>
				<groupId>pl.project13.maven</groupId>
				<artifactId>git-commit-id-plugin</artifactId>
				<version>4.0.5</version>
				<executions>
					<execution>
						<id>zoned</id>
						<goals>
							<goal>revision</goal>
						</goals>
						<phase>initialize</phase>
						<configuration>
							<prefix>zoned.git</prefix>
							<dateFormat>yyyy-MM-dd'T'HH:mm:ssXXX</dateFormat>
						</configuration>
					</execution>
					<execution>
						<id>local</id>
						<goals>
							<goal>revision</goal>
						</goals>
						<phase>initialize</phase>
						<configuration>
							<prefix>local.git</prefix>
