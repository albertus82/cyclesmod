						</goals>
						<configuration>
							<value>${zoned.git.commit.time}</value> <!-- yyyy-MM-dd'T'HH:mm:ssXXX -->
							<regex>T.*$</regex>
							<name>version.date</name> <!-- yyyy-MM-dd -->
						</configuration>
					</execution>
				</executions>
			</plugin>

